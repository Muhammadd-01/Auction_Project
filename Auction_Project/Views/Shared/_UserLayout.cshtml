          <button type="submit" class="bg-white text-[#7A2E2E] px-4 py-1 rounded-md hover:bg-gray-100 transition">Search</button>
        </form>

        <!-- Login/Register Buttons -->
        <div class="flex items-center space-x-3 mt-4 md:mt-0 md:ml-6">
          <a href="login.html" class="text-white border border-white px-3 py-1 rounded-md hover:bg-white hover:text-[#7A2E2E] transition-colors duration-200">Login</a>
          <a href="register.html" class="bg-white text-[#7A2E2E] px-3 py-1 rounded-md hover:bg-gray-100 transition-colors duration-200">Register</a>
