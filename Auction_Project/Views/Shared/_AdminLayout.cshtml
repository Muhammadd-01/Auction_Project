<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | Auction System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/Admin/css/style.css">
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h3>Auction Admin</h3>
                <button type="button" id="sidebarCollapseBtn" class="btn">
                    <i class="bi bi-arrow-left-circle"></i>
                </button>
            </div>

            <ul class="list-unstyled components">
                <li class="active">
                    <a href="@Url.Action("Dashboard","Admin")">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a href="#auctionSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="bi bi-tag"></i> Auctions
                    </a>
                    <ul class="collapse list-unstyled" id="auctionSubmenu">
                        <li>
                            <a href="@Url.Action("ManageUsers","Admin")"><i class="bi bi-book"></i> Books</a>
                        </li>
                        <li>
                            <a href="@Url.Action("ManageUsers","Admin")"><i class="bi bi-lamp"></i> Furniture</a>
                        </li>
                        <li>
                            <a href="@Url.Action("ManageUsers","Admin")"><i class="bi bi-laptop"></i> Electronics</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="@Url.Action("ManageUsers","Admin")">
                        <i class="bi bi-people"></i> Users
                    </a>
                </li>
                @* <li> *@
                @*     <a href="items.html"> *@
                @*         <i class="bi bi-box-seam"></i> Items *@
                @*     </a> *@
                @* </li> *@
                <li>
                    <a href="@Url.Action("Ratings","Admin")">
                        <i class="bi bi-star-fill"></i> Rating
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Notifications","Admin")">
                        <i class="bi bi-bell"></i> Notifications
                        <span class="badge bg-danger notification-badge">0</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("AddUsers","Admin")">
                        <i class="bi bi-person-plus"></i> Add User
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Page404","Admin")">
                        <i class="bi bi-exclamation-triangle"></i> 404 page
                    </a>
                </li>
            </ul>

            <div class="sidebar-footer">
                <div class="theme-toggle">
                    <span>Theme</span>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="themeSwitch">
                        <label class="form-check-label" for="themeSwitch">
                            <i class="bi bi-moon-stars"></i>
                        </label>
                    </div>
                </div>
                <a href="@Url.Action("Index","User")" class="logout">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </div>
        </nav>
        <!-- Page Content -->
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="bi bi-list"></i>
                    </button>
                    <div class="ms-auto d-flex align-items-center">
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-bell"></i>
                                <span class="badge bg-danger notification-badge">0</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end notification-dropdown">
                                <li><h6 class="dropdown-header">Notifications</h6></li>
                                <li><hr class="dropdown-divider"></li>
                                <li class="notification-empty">No new notifications</li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-center" href="notifications.html">View All</a></li>
                            </ul>
                        </div>
                        <div class="dropdown ms-3">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                <img src="https://via.placeholder.com/40" class="rounded-circle me-2" width="32" height="32" alt="Admin">
                                <span>Admin</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                @* <li><a class="dropdown-item" href="#">Profile</a></li> *@
                                @* <li><a class="dropdown-item" href="#">Settings</a></li> *@
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index","User")">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
                            <div>
                                @RenderBody()
                            </div>


        </div>
    </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <script src="~/Admin/js/data.js"></script>
            <script src="~/Admin/js/main.js"></script>
            <script src="~/Admin/js/dashboard.js"></script>
            <script src="~/Admin/js/dark-mode.js"></script>
            <script src="~/Admin/js/sidebar.js"></script>
            <script src="~/Admin/js/notifications.js"></script>
</body>
</html>