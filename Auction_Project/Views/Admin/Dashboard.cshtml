@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}



    <div class="container-fluid">
        <h2 class="mb-4">Dashboard</h2>

        <!-- Stats Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card stats-card bg-primary text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Total Users</h6>
                                <h2 class="mb-0" id="totalUsers">0</h2>
                            </div>
                            <div class="stats-icon">
                                <i class="bi bi-people-fill"></i>
                            </div>
                        </div>
                        <p class="card-text mt-3 mb-0">
                            <i class="bi bi-arrow-up"></i>
                            <span id="userGrowth">0%</span> since last month
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card stats-card bg-success text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Active Auctions</h6>
                                <h2 class="mb-0" id="activeAuctions">0</h2>
                            </div>
                            <div class="stats-icon">
                                <i class="bi bi-tag-fill"></i>
                            </div>
                        </div>
                        <p class="card-text mt-3 mb-0">
                            <i class="bi bi-arrow-up"></i>
                            <span id="auctionGrowth">0%</span> since last week
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card stats-card bg-warning text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Bids Made</h6>
                                <h2 class="mb-0" id="totalBids">0</h2>
                            </div>
                            <div class="stats-icon">
                                <i class="bi bi-cash-stack"></i>
                            </div>
                        </div>
                        <p class="card-text mt-3 mb-0">
                            <i class="bi bi-arrow-up"></i>
                            <span id="bidGrowth">0%</span> since yesterday
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card stats-card bg-danger text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">New Notifications</h6>
                                <h2 class="mb-0" id="newNotifications">0</h2>
                            </div>
                            <div class="stats-icon">
                                <i class="bi bi-bell-fill"></i>
                            </div>
                        </div>
                        <p class="card-text mt-3 mb-0">
                            <i class="bi bi-arrow-up"></i>
                            <span id="notificationGrowth">0%</span> since yesterday
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="row mb-4">
            <div class="col-md-8 mb-3">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="card-title">Auction Activity</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="auctionChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="card-title">Category Distribution</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="categoryChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title">Recent Auctions</h5>
                        <a href="#" class="btn btn-sm btn-primary">View All</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Item</th>
                                        <th>Category</th>
                                        <th>Current Bid</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody id="recentAuctionsTable">
                                    <!-- Will be populated by JavaScript -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title">Recent Users</h5>
                        <a href="users.html" class="btn btn-sm btn-primary">View All</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>User</th>
                                        <th>Role</th>
                                        <th>Joined</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody id="recentUsersTable">
                                    <!-- Will be populated by JavaScript -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>