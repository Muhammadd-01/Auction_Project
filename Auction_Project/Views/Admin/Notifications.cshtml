@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- notifications.html -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Notifications</h6>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Notification Title</th>
                            <th scope="col">Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>New Bid</td>
                            <td>You have a new bid on your item</td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Auction Ended</td>
                            <td>Your auction has ended</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    
