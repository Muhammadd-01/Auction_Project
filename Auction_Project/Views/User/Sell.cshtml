@{

    Layout = "~/Views/Shared/_UserLayout.cshtml";

}
<!-- Sell Item Section -->
<section class="sell-section py-5 mt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6" data-aos="fade-up">
                <div class="card sell-card">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Seller Profile Form</h2>
                        <form id="sellerForm">

                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="sellerUsername" placeholder="Username" required>
                                <label for="sellerUsername">Username</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" id="sellerEmail" placeholder="name@example.com" required>
                                <label for="sellerEmail">Email Address</label>
                            </div>

                            <div class="form-floating mb-4">
                                <textarea class="form-control" id="sellerBio" placeholder="Write a short bio..." style="height: 120px" required></textarea>
                                <label for="sellerBio">Bio</label>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg submit-btn">
                                    <i class="fas fa-paper-plane me-2"></i>Submit
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>