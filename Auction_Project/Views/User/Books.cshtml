        <div class="row" id="booksContainer">
            <!-- Book Item 1 -->
            <div class="col-md-4 col-lg-3 mb-4 item-card" data-aos="fade-up">
                <div class="card h-100">
                    <div class="card-img-container">
                        <img src="images/items/book1.jpg" class="card-img-top" alt="href=" @Url.Action("Items", "User")" Edition Hemingway">
                        <div class="time-left">
                            <i class="fas fa-clock me-1"></i>
                            <span class="countdown" data-time="2023-12-25T10:00:00">1d 2h 15m</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">href="@Url.Action("Items", "User")" Edition Hemingway</h5>
                        <p class="card-text">A href="@Url.Action("Items", "User")" edition of "The Old Man and the Sea" signed by Ernest Hemingway.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="bid-info">
                                <span class="current-bid">$3,500</span>
                                <small class="text-muted">Current Bid</small>
                            </div>
                            <a href="@Url.Action("Items","User")" class="btn btn-primary">Bid Now</a>
