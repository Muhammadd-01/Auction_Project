            <div class="form-text">Upload a book image (optional).</div>
        </div> *@

                        <!-- Submit -->
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-success px-4 py-2">
                                <i class="fas fa-save me-2"></i>Submit Book
                            </button>
