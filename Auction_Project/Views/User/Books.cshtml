@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<!-- Category Header -->
<section class="category-header" style="background-image: url('images/categories/books-banner.jpg');">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h1 data-aos="fade-up">Books</h1>
                <p class="lead" data-aos="fade-up" data-aos-delay="100">
                    Discover rare editions, prints, signed copies, and collectible books from around the world.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Filter + Add Button Section -->
<section class="filter-section py-4">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-md-3 mb-3">
                <div class="form-floating">
                    <select class="form-select" id="sortOptions">
                        <option value="ending-soon">Ending Soon</option>
                        <option value="newly-listed">Newly Listed</option>
                        <option value="price-low">Price: Low to High</option>
                        <option value="price-high">Price: High to Low</option>
                        <option value="bids">Most Bids</option>
                    </select>
                    <label for="sortOptions">Sort By</label>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-floating">
                    <select class="form-select" id="bookType">
                        <option value="all">All Types</option>
                        <option value="fiction">Fiction</option>
                        <option value="non-fiction">Non-Fiction</option>
                        <option value="rare">Rare & Collectible</option>
                        <option value="signed">Signed Copies</option>
                        <option value="limited-edition">Limited Editions</option>
                    </select>
                    <label for="bookType">Book Type</label>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-floating">
                    <select class="form-select" id="condition">
                        <option value="all">All Conditions</option>
                        <option value="new">New</option>
                        <option value="like-new">Like New</option>
                        <option value="good">Good</option>
                        <option value="fair">Fair</option>
                        <option value="poor">Poor</option>
                    </select>
                    <label for="condition">Condition</label>
                </div>
            </div>
            <div class="col-md-3 mb-3 d-flex justify-content-between align-items-center">
                <div class="form-floating w-100 me-2">
                    <select class="form-select" id="priceRange">
                        <option value="all">All Prices</option>
                        <option value="0-50">Under $50</option>
                        <option value="50-100">$50 - $100</option>
                        <option value="100-500">$100 - $500</option>
                        <option value="500-1000">$500 - $1,000</option>
                        <option value="1000+">$1,000+</option>
                    </select>
                    <label for="priceRange">Price Range</label>
                </div>
                <button class="btn btn-dark rounded-pill px-4 py-2 shadow-sm text-white transition-all ease-in-out duration-300 hover:bg-primary hover:shadow-lg" type="button" data-bs-toggle="modal" data-bs-target="#addBookModal">
                    <i class="fas fa-plus me-2"></i> Add Book
                </button>

            </div>
        </div>
    </div>
</section>
<!-- Add/Edit Item Modal -->
<div class="modal fade" id="addBookModal" tabindex="-1" aria-labelledby="addItemModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addItemModalLabel">Add New Book</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- FORM START: Posting to BookController -> AddBook -->
                <form asp-controller="Book" asp-action="AddBook" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <!-- Book Title -->
                            <div class="mb-3">
                                <label for="bookTitle" class="form-label">Book Title</label>
                                <input type="text" class="form-control" id="bookTitle" name="Title" required>
                                <div class="invalid-feedback">Please provide a title.</div>
                            </div>

                            <!-- Subcategory -->
                            <div class="mb-3">
                                <label for="bookSubcategory" class="form-label">Subcategory</label>
                                <select class="form-select" id="bookSubcategory" name="Subcategory" required>
                                    <option value="">Select subcategory</option>
                                    <option value="fiction">Fiction</option>
                                    <option value="non-fiction">Non-fiction</option>
                                    <option value="religion">Religion</option>
                                    <option value="business">Business</option>
                                </select>
                                <div class="invalid-feedback">Please select a subcategory.</div>
                            </div>

                            <!-- Description -->
                            <div class="mb-3">
                                <label for="bookDescription" class="form-label">Description</label>
                                <textarea class="form-control" id="bookDescription" name="Description" rows="3" required></textarea>
                                <div class="invalid-feedback">Please provide a description.</div>
                            </div>

                            <!-- Price and Status -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="bookPrice" class="form-label">Starting Price ($)</label>
                                        <input type="number" class="form-control" id="bookPrice" name="StartingPrice" min="0" step="0.01" required>
                                        <div class="invalid-feedback">Please provide a valid price.</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="bookStatus" class="form-label">Status</label>
                                        <select class="form-select" id="bookStatus" name="Status" required>
                                            <option value="active">Active</option>
                                            <option value="inactive">Inactive</option>
                                        </select>
                                        <div class="invalid-feedback">Please select a status.</div>
                                    </div>
                                </div>
                            </div>

                            <!-- Auction Start/End Date -->
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="auctionStartDate" class="form-label">Auction Start Date</label>
                                    <input type="datetime-local" class="form-control" id="auctionStartDate" name="StartDate" required>
                                    <div class="invalid-feedback">Please provide a starting date.</div>
                                </div>
                                <div class="col-md-6">
                                    <label for="auctionEndDate" class="form-label">Auction End Date</label>
                                    <input type="datetime-local" class="form-control" id="auctionEndDate" name="EndDate" required>
                                    <div class="invalid-feedback">Please provide an end date.</div>
                                </div>
                            </div>

                            <!-- Bid Increment -->
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <label for="bidIncrement" class="form-label">Bid Increment ($)</label>
                                    <input type="number" class="form-control" id="bidIncrement" name="BidIncrement" min="0.01" step="0.01" value="1.00" required>
                                    <div class="invalid-feedback">Please provide a valid bid increment.</div>
                                </div>
                            </div>

                            <!-- Book Image -->
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <label for="bookImage" class="form-label">Book Image</label>
                                    <input class="form-control" type="file" id="bookImage" name="Image" accept="image/*">
                                    <div class="form-text">Upload an image of the book (optional).</div>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="text-center mt-3">
                                <button type="submit" class="btn btn-success px-4 py-2">
                                    <i class="fas fa-save me-2"></i>Submit Book
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- FORM END -->
            </div>
        </div>
    </div>
</div>

