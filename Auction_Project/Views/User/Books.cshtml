@{
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}



    <!-- Book Banner -->
    <section class="book-banner">
        <div class="floating-books">
            <div class="floating-book" style="left: 10%; animation-duration: 12s; animation-delay: 0s;"></div>
            <div class="floating-book" style="left: 20%; animation-duration: 15s; animation-delay: 2s;"></div>
            <div class="floating-book" style="left: 30%; animation-duration: 18s; animation-delay: 1s;"></div>
            <div class="floating-book" style="left: 40%; animation-duration: 10s; animation-delay: 4s;"></div>
            <div class="floating-book" style="left: 50%; animation-duration: 14s; animation-delay: 0s;"></div>
            <div class="floating-book" style="left: 60%; animation-duration: 16s; animation-delay: 3s;"></div>
            <div class="floating-book" style="left: 70%; animation-duration: 13s; animation-delay: 2s;"></div>
            <div class="floating-book" style="left: 80%; animation-duration: 17s; animation-delay: 1s;"></div>
            <div class="floating-book" style="left: 90%; animation-duration: 11s; animation-delay: 5s;"></div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center animate__animated animate__fadeIn">
                    <h1 class="display-4 fw-bold mb-4">Rare Book Auctions</h1>
                    <p class="lead mb-4">Discover first editions, signed copies, and literary treasures from around the world.</p>
                    <div class="d-flex justify-content-center align-items-center">
                        <span class="me-3"><i class="bi bi-book me-2"></i> 250+ rare books</span>
                        <span class="mx-3">•</span>
                        <span><i class="bi bi-people-fill me-2"></i> 128 active bidders</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Search Bar Section -->
    <section>
        <div class="container">
            <div class="search-container">
                <form class="search-form">
                    <input type="text" class="form-control search-input" placeholder="Search for books, authors, or categories..." id="searchInput">
                    <button type="button" class="search-button">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>
        </div>
    </section>

    <!-- Filter and Sort Section -->
    <section class="py-4">
        <div class="container">
            <div class="row">
                <!-- Category Filters - Left Side -->
                <div class="col-md-3">
                    <div class="filter-container">
                        <div class="section-title">
                            <i class="bi bi-filter"></i> Filter by Category
                        </div>
                        <button class="filter-btn active" data-category="all">
                            <i class="bi bi-collection me-2"></i>
                            All Books <span class="book-count" id="allCount">0</span>
                        </button>
                        <button class="filter-btn" data-category="Fiction">
                            <i class="bi bi-book me-2"></i>
                            Fiction <span class="book-count" id="fictionCount">0</span>
                        </button>
                        <button class="filter-btn" data-category="Non-Fiction">
                            <i class="bi bi-journal-text me-2"></i>
                            Non-Fiction <span class="book-count" id="nonFictionCount">0</span>
                        </button>
                        <button class="filter-btn" data-category="Business">
                            <i class="bi bi-briefcase me-2"></i>
                            Business <span class="book-count" id="businessCount">0</span>
                        </button>
                        <button class="filter-btn" data-category="Religious">
                            <i class="bi bi-book-half me-2"></i>
                            Religious <span class="book-count" id="religiousCount">0</span>
                        </button>
                    </div>
                </div>

                <!-- Book Listings - Right Side with Sorting at Top -->
                <div class="col-md-9">
                    <div class="filter-container mb-4">
                        <div class="section-title">
                            <i class="bi bi-sort-down"></i> Sort By
                        </div>
                        <div class="sort-select-wrapper">
                            <select class="form-select sort-select" id="sortSelect">
                                <option value="default">All</option>
                                <option value="ending-soon">Ending Soon</option>
                                <option value="price-low">Price: Low to High</option>
                                <option value="price-high">Price: High to Low</option>
                                <option value="most-bids">Most Bids</option>
                            </select>
                            <i class="bi bi-chevron-down sort-select-icon"></i>
                        </div>
                    </div>

                    <!-- Book Listings -->
                    <div class="row" id="bookListingsContainer">
                        <!-- Books will be dynamically generated here -->
                    </div>

                    <!-- No Results Message -->
                    <div class="no-results" id="noResults" style="display: none;">
                        <i class="bi bi-search"></i>
                        <h3>No Books Found</h3>
                        <p class="text-muted">Try adjusting your filters or search criteria</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Book Details Modal -->
    <div class="modal fade" id="bookDetailsModal" tabindex="-1" aria-labelledby="bookDetailsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content book-details-modal">
                <div class="modal-header">
                    <h5 class="modal-title" id="bookDetailsModalLabel">Book Details</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="bookDetailsContent">
                    <!-- Modal content will be dynamically generated here -->
                </div>
            </div>
        </div>
    </div>
