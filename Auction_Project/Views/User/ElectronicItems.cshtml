                            <div class="col-md-6 mb-3">
                                <h5 class="text-secondary mb-2">Start Time</h5>
                                <p class="fw-bold text-dark">@Model.BidStartDate.ToString("MMM dd, yyyy 'at' hh:mm tt")</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <h5 class="text-secondary mb-2">End Time</h5>
                                <p class="fw-bold text-danger">@Model.BidEndDate.ToString("MMM dd, yyyy 'at' hh:mm tt")</p>
                            </div>
                            <div class="col-12 mt-2">
                                <h5 class="text-secondary mb-2">Time Left</h5>
                                <div id="auctionCountdown" class="fw-bold text-primary" style="font-size: 1.5rem;"></div>
                            </div>
                        </div>
                    </div>

                    <div class="bid-form mb-4" style="background-color: #f8f9fa; border-radius: 10px; padding: 20px;">
                        <h5 style="font-size: 1.1rem; font-weight: 600; margin-bottom: 15px; color: #212529;">Place Your Bid</h5>
                        <form asp-action="PlaceBid" asp-controller="Auction" method="post">
                            <input type="hidden" name="itemId" value="@Model.ItemID" />
                            <div class="row g-2">
                                <div class="col-md-7">
                                    <div class="input-group">
                                        <span class="input-group-text bg-primary text-white border-0">$</span>
                                        <input type="number" class="form-control" name="bidAmount" placeholder="Enter bid amount" min="@(Model.MinimumBid + 25)" step="25" required />
                                    </div>
                                    <div class="form-text mt-1 text-muted">Minimum bid: $@((Model.MinimumBid + 25.00M).ToString("F2"))</div>
                                </div>
                                <div class="col-md-5">
                                    <button type="submit" class="btn btn-primary w-100">
