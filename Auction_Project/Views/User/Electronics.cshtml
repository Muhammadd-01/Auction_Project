@{

    Layout = "~/Views/Shared/_UserLayout.cshtml";

}
<!-- Category Header -->
<section class="category-header" style="background-image: url('images/categories/electronics-banner.jpg');">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h1 data-aos="fade-up">Electronics</h1>
                <p class="lead" data-aos="fade-up" data-aos-delay="100">Discover vintage, collectible, and rare electronics from around the world.</p>
            </div>
        </div>
    </div>
</section>

<!-- Filter Section -->
<section class="filter-section py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-3 mb-3">
                <div class="form-floating">
                    <select class="form-select" id="sortOptions">
                        <option value="ending-soon">Ending Soon</option>
                        <option value="newly-listed">Newly Listed</option>
                        <option value="price-low">Price: Low to High</option>
                        <option value="price-high">Price: High to Low</option>
                        <option value="bids">Most Bids</option>
                    </select>
                    <label for="sortOptions">Sort By</label>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-floating">
                    <select class="form-select" id="electronicsType">
                        <option value="all">All Types</option>
                        <option value="cameras">Cameras & Photography</option>
                        <option value="audio">Audio Equipment</option>
                        <option value="computers">Computers & Parts</option>
                        <option value="gaming">Gaming & Consoles</option>
                        <option value="phones">Phones & Communication</option>
                    </select>
                    <label for="electronicsType">Electronics Type</label>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-floating">
                    <select class="form-select" id="condition">
                        <option value="all">All Conditions</option>
                        <option value="new">New</option>
                        <option value="like-new">Like New</option>
                        <option value="good">Good</option>
                        <option value="fair">Fair</option>
                        <option value="for-parts">For Parts/Not Working</option>
                    </select>
                    <label for="condition">Condition</label>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-floating">
                    <select class="form-select" id="priceRange">
                        <option value="all">All Prices</option>
                        <option value="0-100">Under $100</option>
                        <option value="100-500">$100 - $500</option>
                        <option value="500-1000">$500 - $1,000</option>
                        <option value="1000-5000">$1,000 - $5,000</option>
                        <option value="5000+">$5,000+</option>
                    </select>
                    <label for="priceRange">Price Range</label>
                </div>
            </div>
        </div>
    </div>
</section>

