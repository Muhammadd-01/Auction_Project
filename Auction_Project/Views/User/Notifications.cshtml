@{
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<!-- Main Content -->
<main class="flex-grow container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Notifications</h1>

    <!-- Notification Filter -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 mb-6">
        <div class="flex flex-wrap gap-2">
            <button class="px-4 py-2 bg-red-800 text-white rounded-md hover:bg-red-700 transition-colors duration-200">
                All
            </button>
            <button class="px-4 py-2 bg-gray-200 dark:bg-gray-700 rounded-md hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200">
                Bids
            </button>
            <button class="px-4 py-2 bg-gray-200 dark:bg-gray-700 rounded-md hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200">
                Auctions
            </button>
            <button class="px-4 py-2 bg-gray-200 dark:bg-gray-700 rounded-md hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200">
                Watchlist
            </button>
            <button class="px-4 py-2 bg-gray-200 dark:bg-gray-700 rounded-md hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200">
                Messages
            </button>
        </div>
    </div>

    <!-- Today's Notifications -->
    <div class="mb-8">
        <h2 class="text-xl font-semibold mb-4">Today</h2>
        <div class="space-y-4">
            <!-- Notification 1 -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow duration-200">
                <div class="flex items-start">
                    <div class="bg-red-100 dark:bg-red-900/20 p-3 rounded-full mr-4">
                        <i data-feather="dollar-sign" class="h-6 w-6 text-red-800 dark:text-red-500"></i>
                    </div>
                    <div class="flex-1">
                        <div class="flex justify-between items-start">
                            <h3 class="font-semibold">You've been outbid!</h3>
                            <span class="text-sm text-gray-600 dark:text-gray-400">10 mins ago</span>
                        </div>
                        <p class="text-gray-600 dark:text-gray-400 mt-1">Someone placed a higher bid of $1,280 on the Vintage Leica Camera.</p>
                        <div class="mt-3">
                            <a href="item-details.html?id=1" class="text-red-800 dark:text-red-500 text-sm font-medium hover:underline">View Item</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notification 2 -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow duration-200">
                <div class="flex items-start">
                    <div class="bg-green-100 dark:bg-green-900/20 p-3 rounded-full mr-4">
                        <i data-feather="check-circle" class="h-6 w-6 text-green-600 dark:text-green-500"></i>
                    </div>
                    <div class="flex-1">
                        <div class="flex justify-between items-start">
                            <h3 class="font-semibold">Your auction was successfully listed!</h3>
                            <span class="text-sm text-gray-600 dark:text-gray-400">3 hours ago</span>
                        </div>
                        <p class="text-gray-600 dark:text-gray-400 mt-1">Your Vintage Vinyl Record Collection has been approved and is now live.</p>
                        <div class="mt-3">
                            <a href="#" class="text-red-800 dark:text-red-500 text-sm font-medium hover:underline">View Auction</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notification 3 -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow duration-200 opacity-70">
                <div class="flex items-start">
                    <div class="bg-blue-100 dark:bg-blue-900/20 p-3 rounded-full mr-4">
                        <i data-feather="eye" class="h-6 w-6 text-blue-600 dark:text-blue-500"></i>
                    </div>
                    <div class="flex-1">
                        <div class="flex justify-between items-start">
                            <h3 class="font-semibold">Watchlist item ending soon</h3>
                            <span class="text-sm text-gray-600 dark:text-gray-400">6 hours ago</span>
                        </div>
                        <p class="text-gray-600 dark:text-gray-400 mt-1">The Antique Pocket Watch you're watching ends in less than 24 hours.</p>
                        <div class="mt-3">
                            <a href="item-details.html?id=2" class="text-red-800 dark:text-red-500 text-sm font-medium hover:underline">View Item</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Yesterday's Notifications -->
    <div class="mb-8">
        <h2 class="text-xl font-semibold mb-4">Yesterday</h2>
        <div class="space-y-4">
            <!-- Notification 4 -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow duration-200 opacity-70">
                <div class="flex items-start">
                    <div class="bg-purple-100 dark:bg-purple-900/20 p-3 rounded-full mr-4">
                        <i data-feather="message-circle" class="h-6 w-6 text-purple-600 dark:text-purple-500"></i>
                    </div>
                    <div class="flex-1">
                        <div class="flex justify-between items-start">
                            <h3 class="font-semibold">New message from seller</h3>
                            <span class="text-sm text-gray-600 dark:text-gray-400">Yesterday</span>
                        </div>
                        <p class="text-gray-600 dark:text-gray-400 mt-1">Michael Thompson replied to your question about the Vintage Leica Camera.</p>
                        <div class="mt-3">
                            <a href="#" class="text-red-800 dark:text-red-500 text-sm font-medium hover:underline">Read Message</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notification 5 -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow duration-200 opacity-70">
                <div class="flex items-start">
                    <div class="bg-yellow-100 dark:bg-yellow-900/20 p-3 rounded-full mr-4">
                        <i data-feather="alert-triangle" class="h-6 w-6
 text-yellow-600 dark:text-yellow-500"></i>
                    </div>
                    <div class="flex-1">
                        <div class="flex justify-between items-start">
                            <h3 class="font-semibold">Payment reminder</h3>
                            <span class="text-sm text-gray-600 dark:text-gray-400">Yesterday</span>
                        </div>
                        <p class="text-gray-600 dark:text-gray-400 mt-1">Please complete your payment for the Vintage Camera Lens you won. Payment is due within 48 hours.</p>
                        <div class="mt-3">
                            <a href="#" class="text-red-800 dark:text-red-500 text-sm font-medium hover:underline">Complete Payment</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Earlier Notifications -->
    <div>
        <h2 class="text-xl font-semibold mb-4">Earlier</h2>
        <div class="space-y-4">
            <!-- Notification 6 -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow duration-200 opacity-70">
                <div class="flex items-start">
                    <div class="bg-green-100 dark:bg-green-900/20 p-3 rounded-full mr-4">
                        <i data-feather="award" class="h-6 w-6 text-green-600 dark:text-green-500"></i>
                    </div>
                    <div class="flex-1">
                        <div class="flex justify-between items-start">
                            <h3 class="font-semibold">Congratulations! You won an auction</h3>
                            <span class="text-sm text-gray-600 dark:text-gray-400">3 days ago</span>
                        </div>
                        <p class="text-gray-600 dark:text-gray-400 mt-1">You were the highest bidder on the Vintage Camera Lens. Please complete your payment.</p>
                        <div class="mt-3">
                            <a href="#" class="text-red-800 dark:text-red-500 text-sm font-medium hover:underline">View Details</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notification 7 -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow duration-200 opacity-70">
                <div class="flex items-start">
                    <div class="bg-blue-100 dark:bg-blue-900/20 p-3 rounded-full mr-4">
                        <i data-feather="tag" class="h-6 w-6 text-blue-600 dark:text-blue-500"></i>
                    </div>
                    <div class="flex-1">
                        <div class="flex justify-between items-start">
                            <h3 class="font-semibold">Price drop on your watchlist item</h3>
                            <span class="text-sm text-gray-600 dark:text-gray-400">5 days ago</span>
                        </div>
                        <p class="text-gray-600 dark:text-gray-400 mt-1">The seller has reduced the starting price of the Rare Comic Book Collection you're watching.</p>
                        <div class="mt-3">
                            <a href="#" class="text-red-800 dark:text-red-500 text-sm font-medium hover:underline">View Item</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notification 8 -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow duration-200 opacity-70">
                <div class="flex items-start">
                    <div class="bg-gray-100 dark:bg-gray-700 p-3 rounded-full mr-4">
                        <i data-feather="bell" class="h-6 w-6 text-gray-600 dark:text-gray-400"></i>
                    </div>
                    <div class="flex-1">
                        <div class="flex justify-between items-start">
                            <h3 class="font-semibold">Welcome to BidMaster!</h3>
                            <span class="text-sm text-gray-600 dark:text-gray-400">1 week ago</span>
                        </div>
                        <p class="text-gray-600 dark:text-gray-400 mt-1">Thank you for joining BidMaster. Start exploring auctions or list your first item.</p>
                        <div class="mt-3">
                            <a href="index.html" class="text-red-800 dark:text-red-500 text-sm font-medium hover:underline">Explore Auctions</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Load More Button -->
    <div class="mt-8 text-center">
        <button class="px-6 py-3 bg-gray-200 dark:bg-gray-700 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200 font-medium">
            Load More
        </button>
    </div>
</main>