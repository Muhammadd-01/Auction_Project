@{
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-pattern"></div>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 animate__animated animate__fadeInLeft">
                <h1 class="display-5 fw-bold mb-4">Live Auctions</h1>
                <p class="lead mb-4">Bid on unique books, furniture, and electronic accessories from trusted sellers.</p>
                <div class="d-flex align-items-center">
                    <span class="live-indicator"></span>
                    <span class="fw-bold">1,245 active auctions</span>
                    <span class="mx-3">•</span>
                    <span><i class="bi bi-people-fill me-1"></i> 328 bidders online</span>
                </div>
            </div>
            <div class="col-lg-6 animate__animated animate__fadeInRight">
                <div class="row">
                    <div class="col-6">
                        <div class="card auction-card mb-3">
                            <div class="auction-img-container">
                                <img src="https://images.unsplash.com/photo-1544947950-fa07a98d237f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=800&q=80" alt="Rare Book" class="auction-img">
                                <div class="auction-category">Books</div>
                                <div class="hot-badge">
                                    <i class="bi bi-fire"></i> Hot
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card auction-card mb-3">
                            <div class="auction-img-container">
                                <img src="https://images.unsplash.com/photo-1555041469-a586c61ea9bc?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=800&q=80" alt="Vintage Chair" class="auction-img">
                                <div class="auction-category">Furniture</div>
                                <div class="trending-badge">
                                    <i class="bi bi-graph-up"></i> Trending
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card auction-card">
                            <div class="auction-img-container">
                                <img src="https://images.unsplash.com/photo-1550009158-9ebf69173e03?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=800&q=80" alt="Vintage Electronics" class="auction-img">
                                <div class="auction-category">Electronics</div>
                                <div class="new-badge">
                                    <i class="bi bi-stars"></i> New
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card auction-card">
                            <div class="auction-img-container">
                                <img src="https://images.unsplash.com/photo-1506377247377-2a5b3b417ebb?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=800&q=80" alt="Antique Desk" class="auction-img">
                                <div class="auction-category">Furniture</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-md-6">
                <form class="search-form">
                    <i class="bi bi-search search-icon"></i>
                    <input type="text" class="form-control search-input" placeholder="Search auctions..." id="searchInput">
                </form>
            </div>
            <div class="col-md-6 text-md-end mt-3 mt-md-0">
                <button class="filter-btn active" data-category="all">All</button>
                <button class="filter-btn" data-category="Books">Books</button>
                <button class="filter-btn" data-category="Furniture">Furniture</button>
                <button class="filter-btn" data-category="Electronics">Electronics</button>
            </div>
        </div>

        <ul class="nav nav-tabs mb-4" id="auctionTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="latest-tab" data-bs-toggle="tab" data-bs-target="#latest" type="button" role="tab" aria-controls="latest" aria-selected="true">
                    Latest Auctions
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="trending-tab" data-bs-toggle="tab" data-bs-target="#trending" type="button" role="tab" aria-controls="trending" aria-selected="false">
                    Trending Now
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="most-bids-tab" data-bs-toggle="tab" data-bs-target="#most-bids" type="button" role="tab" aria-controls="most-bids" aria-selected="false">
                    Most Bids
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="ending-soon-tab" data-bs-toggle="tab" data-bs-target="#ending-soon" type="button" role="tab" aria-controls="ending-soon" aria-selected="false">
                    Ending Soon
                </button>
            </li>
        </ul>

        <div class="tab-content" id="auctionTabsContent">
            <!-- Latest Auctions Tab -->
            <div class="tab-pane fade show active" id="latest" role="tabpanel" aria-labelledby="latest-tab">
                <div class="row" id="latestAuctionsContainer">
                    <!-- Cards will be dynamically generated here -->
                </div>
            </div>

            <!-- Trending Now Tab -->
            <div class="tab-pane fade" id="trending" role="tabpanel" aria-labelledby="trending-tab">
                <div class="row" id="trendingAuctionsContainer">
                    <!-- Cards will be dynamically generated here -->
                </div>
            </div>

            <!-- Most Bids Tab -->
            <div class="tab-pane fade" id="most-bids" role="tabpanel" aria-labelledby="most-bids-tab">
                <div class="row" id="mostBidsAuctionsContainer">
                    <!-- Cards will be dynamically generated here -->
                </div>
            </div>

            <!-- Ending Soon Tab -->
            <div class="tab-pane fade" id="ending-soon" role="tabpanel" aria-labelledby="ending-soon-tab">
                <div class="row" id="endingSoonAuctionsContainer">
                    <!-- Cards will be dynamically generated here -->
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Auction Details Modal -->
<div class="modal fade" id="auctionDetailsModal" tabindex="-1" aria-labelledby="auctionDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content auction-details-modal">
            <div class="modal-header">
                <h5 class="modal-title" id="auctionDetailsModalLabel">Auction Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="auctionDetailsContent">
                <!-- Modal content will be dynamically generated here -->
            </div>
        </div>
    </div>
</div>

<!-- Floating Chat Button -->
<div class="floating-chat-btn">
    <i class="bi bi-chat-dots"></i>
</div>

<!-- Toast Container -->
<div class="toast-container"></div>
