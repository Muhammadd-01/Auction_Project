@model Auction_Project.models.Books

@{

    Layout = "~/Views/Shared/_UserLayout.cshtml";

}
<!-- Item Details Section -->
<section class="item-details py-5">
    <div class="container">
        <div class="row">
            <!-- Item Images -->
            <div class="col-lg-6 mb-4" data-aos="fade-up">
                <div class="item-images-container">
                    <div class="swiper itemSwiper">
                        <div class="swiper-wrapper">
                            @foreach (var imageUrl in Model.book_cover)
                            {
                                <div class="swiper-slide">
                                    <img src="~/books_covers/@Model.book_cover" alt="@Model.ItemTitle" class="img-fluid" />
                                </div>
                            }
                        </div>
                        <div class="swiper-pagination"></div>
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                    </div>
                    <div class="swiper itemThumbnailSwiper mt-3">
                        <div class="swiper-wrapper">
                            @foreach (var imageUrl in Model.book_cover)
                            {
                                <div class="swiper-slide">
                                    <img src="~/books_covers/@Model.book_cover" alt="Thumbnail" class="img-fluid" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Item Info -->
            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                <div class="item-info">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h1 class="item-title">@Model.ItemTitle</h1>
                        <button class="btn btn-outline-secondary btn-sm watch-btn">
                            <i class="far fa-heart"></i> Watch
                        </button>
                    </div>

                    <div class="item-meta mb-4">
                        @* <span class="badge bg-secondary me-2">@Model.</span> *@
                        <span class="badge bg-secondary">@Model.SubCategory</span>
                    </div>

                    <div class="auction-info mb-4">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="auction-detail">
                                    <h5>Current Bid</h5>
                                    <div class="current-bid">$@Model.MinimumBid.ToString("F2")</div>
                                    <small class="text-muted">12 bids · <a href="#bid-history" data-bs-toggle="modal" data-bs-target="#bidHistoryModal">View history</a></small>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="auction-detail">
                                    <h5>Time Left</h5>
                                    <div class="time-left">
                                        <div class="countdown" id="auctionCountdown"></div>
                                    </div>
                                    <small class="text-muted">Ends @Model.BidEndDate.ToString("MMM dd, yyyy 'at' hh:mm tt")</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bid-form mb-4">
                        <form asp-action="PlaceBid" asp-controller="Auction" method="post">
                            <input type="hidden" name="itemId" value="@Model.ItemID" />
                            <div class="row g-2">
                                <div class="col-md-7">
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" class="form-control" name="bidAmount" placeholder="Enter bid amount" min="@(Model.MinimumBid + 25)" step="25" required />
                                    </div>
                                    <div class="form-text">Minimum bid: $@(Model.MinimumBid + 25.00M).ToString("F2")</div>
                                </div>
                                <div class="col-md-5">
                                    <button type="submit" class="btn btn-primary w-100 bid-btn">
                                        <i class="fas fa-gavel me-2"></i>Place Bid
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="item-details-tabs">
                        <ul class="nav nav-tabs" id="itemDetailsTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab">Description</button>
                            </li>
                        </ul>
                        <div class="tab-content p-3 border border-top-0 rounded-bottom" id="itemDetailsTabsContent">
                            <div class="tab-pane fade show active" id="description" role="tabpanel">
                                <p>@Model.ItemDescription</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
