@model Auction_Project.models.Books

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!-- Item Details Section -->
<section class="item-details py-5" style="background: linear-gradient(to bottom, #f8f9fa, #ffffff);">
    <div class="container">
        <div class="row">
            <!-- Item Images - Replaced Swiper with elegant image display -->
            <div class="col-lg-6 mb-4" data-aos="fade-up">
                <div class="item-images-container" style="position: relative; border-radius: 12px; overflow: hidden; box-shadow: 0 10px 30px rgba(0,0,0,0.1);">
                    <div class="main-image-wrapper" style="position: relative; overflow: hidden; border-radius: 12px;">
                        <img src="~/books_covers/@Model.book_cover" alt="@Model.ItemTitle" class="img-fluid" style="width: 100%; height: auto; transition: transform 0.5s ease; object-fit: cover;" />
                        <div class="image-overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(to bottom, rgba(0,0,0,0.01), rgba(0,0,0,0.3)); display: flex; align-items: flex-end; padding: 20px;">
                            <span class="badge bg-primary" style="position: absolute; top: 20px; right: 20px; font-size: 14px; padding: 8px 15px; border-radius: 30px;">Featured</span>
                        </div>
                    </div>
                    <div class="book-details-badge" style="position: absolute; bottom: 20px; left: 20px; background-color: rgba(255,255,255,0.9); padding: 10px 15px; border-radius: 8px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
                        <div style="font-weight: 600; color: #333;">@Model.SubCategory</div>
                    </div>
                </div>

                <!-- Book specifications -->
                <div class="book-specs mt-4 p-4" style="background-color: #f8f9fa; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.05);">
                    <h5 style="font-weight: 600; color: #333; margin-bottom: 15px; border-bottom: 1px solid #dee2e6; padding-bottom: 10px;">Book Specifications</h5>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <div style="font-size: 14px; color: #6c757d;">Condition</div>
                            <div style="font-weight: 600; color: #333;">Excellent</div>
                        </div>
                        <div class="col-6 mb-3">
                            <div style="font-size: 14px; color: #6c757d;">Publication Year</div>
                            <div style="font-weight: 600; color: #333;">2020</div>
                        </div>
                        <div class="col-6 mb-3">
                            <div style="font-size: 14px; color: #6c757d;">Pages</div>
                            <div style="font-weight: 600; color: #333;">342</div>
                        </div>
                        <div class="col-6 mb-3">
                            <div style="font-size: 14px; color: #6c757d;">Language</div>
                            <div style="font-weight: 600; color: #333;">English</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Item Info -->
            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                <div class="item-info p-4" style="background-color: #ffffff; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.05);">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h1 class="item-title" style="font-size: 2.5rem; font-weight: 700; color: #212529; margin-bottom: 5px;">@Model.ItemTitle</h1>
                        <button class="btn watch-btn" style="background-color: transparent; border: none; color: #dc3545; font-size: 1.5rem;">
                            <i class="far fa-heart"></i>
                        </button>
                    </div>

                    <div class="auction-info mb-4" style="background: linear-gradient(to right, #f8f9fa, #ffffff); border-radius: 10px; padding: 20px; border-left: 4px solid #0d6efd;">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="auction-detail">
                                    <h5 style="font-size: 1rem; color: #6c757d; margin-bottom: 8px;">Current Bid</h5>
                                    <div class="current-bid" style="font-size: 2rem; font-weight: 700; color: #0d6efd;">$@Model.MinimumBid.ToString("F2")</div>
                                    <small class="text-muted" style="font-size: 0.85rem;">12 bids · <a href="#bid-history" data-bs-toggle="modal" data-bs-target="#bidHistoryModal" style="color: #0d6efd; text-decoration: none;">View history</a></small>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="auction-detail">
                                    <h5 style="font-size: 1rem; color: #6c757d; margin-bottom: 8px;">Time Left</h5>
                                    <div class="time-left">
                                        <div class="countdown" id="auctionCountdown" style="font-size: 1.5rem; font-weight: 700; color: #dc3545;">2d 14h 35m</div>
                                    </div>
                                    <small class="text-muted" style="font-size: 0.85rem;">Ends @Model.BidEndDate.ToString("MMM dd, yyyy 'at' hh:mm tt")</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bid-form mb-4" style="background-color: #f8f9fa; border-radius: 10px; padding: 20px; box-shadow: inset 0 0 10px rgba(0,0,0,0.03);">
                        <h5 style="font-size: 1.1rem; font-weight: 600; margin-bottom: 15px; color: #212529;">Place Your Bid</h5>
                        <form asp-action="PlaceBid" asp-controller="Auction" method="post">
                            <input type="hidden" name="itemId" value="@Model.ItemID" />
                            <div class="row g-2">
                                <div class="col-md-7">
                                    <div class="input-group" style="box-shadow: 0 3px 10px rgba(0,0,0,0.05); border-radius: 8px; overflow: hidden;">
                                        <span class="input-group-text" style="background-color: #0d6efd; color: white; border: none;">$</span>
                                        <input type="number" class="form-control" name="bidAmount" placeholder="Enter bid amount" min="@(Model.MinimumBid + 25)" step="25" required style="border: none; padding: 12px; font-size: 1.1rem;" />
                                    </div>
                                    <div class="form-text" style="color: #6c757d; font-size: 0.85rem; margin-top: 8px;">Minimum bid: $@((Model.MinimumBid + 25.00M).ToString("F2"))</div>
                                </div>
                                <div class="col-md-5">
                                    <button type="submit" class="btn btn-primary w-100 bid-btn" style="padding: 12px; font-weight: 600; border-radius: 8px; box-shadow: 0 4px 15px rgba(13, 110, 253, 0.3); transition: all 0.3s ease;">
                                        <i class="fas fa-gavel me-2"></i>Place Bid
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="seller-info mb-4" style="display: flex; align-items: center; background-color: #ffffff; border-radius: 10px; padding: 15px; border: 1px solid #e9ecef;">
                        @* <div style="width: 50px; height: 50px; border-radius: 50%; overflow: hidden; margin-right: 15px;"> *@
                        @*     <img src="/placeholder.svg?height=50&width=50" alt="Seller" style="width: 100%; height: 100%; object-fit: cover;" /> *@
                        @* </div> *@
                        <div>
                            <h6 style="margin-bottom: 3px; font-weight: 600;">
                                Seller: @(Model.Seller != null ? Model.Seller.SellerName : "Unknown")
                            </h6>



                            <div style="display: flex; align-items: center;">
                                <div style="color: #ffc107; margin-right: 5px;">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                </div>
                                <span style="font-size: 0.9rem; color: #6c757d;">4.8 (124 reviews)</span>
                            </div>
                        </div>
                    </div>

                    <div class="item-details-tabs">
                        <ul class="nav nav-tabs" id="itemDetailsTabs" role="tablist" style="border-bottom: 2px solid #e9ecef;">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab" style="font-weight: 600; color: #0d6efd; border: none; padding: 12px 20px; position: relative;">
                                    Description
                                    <span style="position: absolute; bottom: -2px; left: 0; width: 100%; height: 2px; background-color: #0d6efd;"></span>
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="shipping-tab" data-bs-toggle="tab" data-bs-target="#shipping" type="button" role="tab" style="font-weight: 600; color: #6c757d; border: none; padding: 12px 20px;">
                                    Shipping
                                </button>
                            </li>
                        </ul>
                        <div class="tab-content p-4" id="itemDetailsTabsContent" style="background-color: #ffffff; border: 1px solid #e9ecef; border-top: none; border-radius: 0 0 10px 10px;">
                            <div class="tab-pane fade show active" id="description" role="tabpanel">
                                <p style="line-height: 1.7; color: #495057;">@Model.ItemDescription</p>
                            </div>
                            <div class="tab-pane fade" id="shipping" role="tabpanel">
                                <div style="background-color: #f8f9fa; padding: 15px; border-radius: 8px; margin-bottom: 15px;">
                                    <h6 style="font-weight: 600; margin-bottom: 10px;">Shipping Information</h6>
                                    <p style="margin-bottom: 8px;"><i class="fas fa-truck me-2" style="color: #0d6efd;"></i> Standard Shipping: $8.99</p>
                                    <p style="margin-bottom: 8px;"><i class="fas fa-shipping-fast me-2" style="color: #0d6efd;"></i> Express Shipping: $14.99</p>
                                    <p style="margin-bottom: 0;"><i class="fas fa-globe-americas me-2" style="color: #0d6efd;"></i> International Shipping: $24.99</p>
                                </div>
                                <p style="font-size: 0.9rem; color: #6c757d;">All items are carefully packaged and typically ship within 2 business days after payment is received.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

