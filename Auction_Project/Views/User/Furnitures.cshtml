@{
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}

  <!-- Furniture Banner -->
    <section class="furniture-banner">
        <div class="floating-furniture">
            <div class="floating-item" style="left: 10%; animation-duration: 12s; animation-delay: 0s;"></div>
            <div class="floating-item" style="left: 20%; animation-duration: 15s; animation-delay: 2s;"></div>
            <div class="floating-item" style="left: 30%; animation-duration: 18s; animation-delay: 1s;"></div>
            <div class="floating-item" style="left: 40%; animation-duration: 10s; animation-delay: 4s;"></div>
            <div class="floating-item" style="left: 50%; animation-duration: 14s; animation-delay: 0s;"></div>
            <div class="floating-item" style="left: 60%; animation-duration: 16s; animation-delay: 3s;"></div>
            <div class="floating-item" style="left: 70%; animation-duration: 13s; animation-delay: 2s;"></div>
            <div class="floating-item" style="left: 80%; animation-duration: 17s; animation-delay: 1s;"></div>
            <div class="floating-item" style="left: 90%; animation-duration: 11s; animation-delay: 5s;"></div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center animate__animated animate__fadeIn">
                    <h1 class="display-4 fw-bold mb-4">Furniture Auctions</h1>
                    <p class="lead mb-4">Discover premium furniture, rare antiques, and designer pieces from around the world.</p>
                    <div class="d-flex justify-content-center align-items-center">
                        <span class="me-3"><i class="bi bi-chair me-2"></i> 350+ premium furniture pieces</span>
                        <span class="mx-3">•</span>
                        <span><i class="bi bi-people-fill me-2"></i> 215 active bidders</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Search Bar Section -->
    <section>
        <div class="container">
            <div class="search-container">
                <form class="search-form">
                    <input type="text" class="form-control search-input" placeholder="Search for furniture, brands, or categories..." id="searchInput">
                    <button type="button" class="search-button">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>
        </div>
    </section>

    <!-- Filter and Sort Section -->
    <section class="py-4">
        <div class="container">
            <div class="row">
                <!-- Category Filters - Left Side -->
                <div class="col-md-3">
                    <div class="filter-container">
                        <div class="section-title">
                            <i class="bi bi-filter"></i> Filter by Category
                        </div>
                        <button class="filter-btn active" data-category="all">
                            <i class="bi bi-collection me-2"></i>
                            All Furniture <span class="item-count" id="allCount">0</span>
                        </button>
                        <button class="filter-btn" data-category="Sofas">
                            <i class="bi bi-house me-2"></i>
                            Sofas & Seating <span class="item-count" id="sofasCount">0</span>
                        </button>
                        <button class="filter-btn" data-category="Tables">
                            <i class="bi bi-grid-3x3 me-2"></i>
                            Tables <span class="item-count" id="tablesCount">0</span>
                        </button>
                        <button class="filter-btn" data-category="Bedroom">
                            <i class="bi bi-lamp me-2"></i>
                            Bedroom <span class="item-count" id="bedroomCount">0</span>
                        </button>
                        <button class="filter-btn" data-category="Storage">
                            <i class="bi bi-archive me-2"></i>
                            Storage <span class="item-count" id="storageCount">0</span>
                        </button>
                        <button class="filter-btn" data-category="Decor">
                            <i class="bi bi-palette me-2"></i>
                            Decor <span class="item-count" id="decorCount">0</span>
                        </button>
                    </div>

                    <div class="filter-container mt-4">
                        <div class="section-title">
                            <i class="bi bi-tag"></i> Filter by Style
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" value="Modern" id="styleModern" checked>
                            <label class="form-check-label" for="styleModern">
                                Modern
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" value="Antique" id="styleAntique" checked>
                            <label class="form-check-label" for="styleAntique">
                                Antique
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" value="Vintage" id="styleVintage" checked>
                            <label class="form-check-label" for="styleVintage">
                                Vintage
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Designer" id="styleDesigner" checked>
                            <label class="form-check-label" for="styleDesigner">
                                Designer
                            </label>
                        </div>
                    </div>

                    <div class="filter-container mt-4">
                        <div class="section-title">
                            <i class="bi bi-currency-dollar"></i> Price Range
                        </div>
                        <div class="mb-3">
                            <label for="minPrice" class="form-label small">Min Price ($)</label>
                            <input type="number" class="form-control" id="minPrice" placeholder="0">
                        </div>
                        <div class="mb-3">
                            <label for="maxPrice" class="form-label small">Max Price ($)</label>
                            <input type="number" class="form-control" id="maxPrice" placeholder="10000">
                        </div>
                        <button class="btn btn-primary w-100" id="applyPriceFilter">Apply</button>
                    </div>
                </div>

                <!-- Furniture Listings - Right Side with Sorting at Top -->
                <div class="col-md-9">
                    <div class="filter-container mb-4">
                        <div class="section-title">
                            <i class="bi bi-sort-down"></i> Sort By
                        </div>
                        <div class="sort-select-wrapper">
                            <select class="form-select sort-select" id="sortSelect">
                                <option value="default">All</option>
                                <option value="ending-soon">Ending Soon</option>
                                <option value="price-low">Price: Low to High</option>
                                <option value="price-high">Price: High to Low</option>
                                <option value="most-bids">Most Bids</option>
                                <option value="newest">Newest Listings</option>
                            </select>
                            <i class="bi bi-chevron-down sort-select-icon"></i>
                        </div>
                    </div>

                    <!-- Furniture Listings -->
                    <div class="row" id="furnitureListingsContainer">
                        <!-- Furniture will be dynamically generated here -->
                    </div>

                    <!-- No Results Message -->
                    <div class="no-results" id="noResults" style="display: none;">
                        <i class="bi bi-search"></i>
                        <h3>No Furniture Found</h3>
                        <p class="text-muted">Try adjusting your filters or search criteria</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Item Details Modal -->
    <div class="modal fade" id="itemDetailsModal" tabindex="-1" aria-labelledby="itemDetailsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content item-details-modal">
                <div class="modal-header">
                    <h5 class="modal-title" id="itemDetailsModalLabel">Item Details</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="itemDetailsContent">
                    <!-- Modal content will be dynamically generated here -->
                </div>
            </div>
        </div>
    </div>