@{

    Layout = "~/Views/Shared/_UserLayout.cshtml";

}

<!-- Category Header -->
<section class="category-header" style="background-image: url('images/categories/furniture-banner.jpg');">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h1 data-aos="fade-up">Furniture</h1>
                <p class="lead" data-aos="fade-up" data-aos-delay="100">Discover antique, vintage, and designer furniture pieces from around the world.</p>
            </div>
        </div>
    </div>
</section>

<!-- Filter Section -->
<section class="filter-section py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-3 mb-3">
                <div class="form-floating">
                    <select class="form-select" id="sortOptions">
                        <option value="ending-soon">Ending Soon</option>
                        <option value="newly-listed">Newly Listed</option>
                        <option value="price-low">Price: Low to High</option>
                        <option value="price-high">Price: High to Low</option>
                        <option value="bids">Most Bids</option>
                    </select>
                    <label for="sortOptions">Sort By</label>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-floating">
                    <select class="form-select" id="furnitureType">
                        <option value="all">All Types</option>
                        <option value="chairs">Chairs & Seating</option>
                        <option value="tables">Tables & Desks</option>
                        <option value="cabinets">Cabinets & Storage</option>
                        <option value="bedroom">Bedroom Furniture</option>
                        <option value="lighting">Lighting</option>
                    </select>
                    <label for="furnitureType">Furniture Type</label>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-floating">
                    <select class="form-select" id="era">
                        <option value="all">All Eras</option>
                        <option value="antique">Antique (100+ years)</option>
                        <option value="vintage">Vintage (20-99 years)</option>
                        <option value="mid-century">Mid-Century</option>
                        <option value="contemporary">Contemporary</option>
                    </select>
                    <label for="era">Era</label>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-floating">
                    <select class="form-select" id="priceRange">
                        <option value="all">All Prices</option>
                        <option value="0-500">Under $500</option>
                        <option value="500-1000">$500 - $1,000</option>
                        <option value="1000-5000">$1,000 - $5,000</option>
                        <option value="5000-10000">$5,000 - $10,000</option>
                        <option value="10000+">$10,000+</option>
                    </select>
                    <label for="priceRange">Price Range</label>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Furniture Listings -->
<section class="category-listings py-5">
    <div class="container">
        <div class="row" id="furnitureContainer">
            <!-- Furniture Item 1 -->
            <div class="col-md-4 col-lg-3 mb-4 item-card" data-aos="fade-up">
                <div class="card h-100">
                    <div class="card-img-container">
                        <img src="images/items/desk.jpg" class="card-img-top" alt="Victorian Writing Desk">
                        <div class="time-left">
                            <i class="fas fa-clock me-1"></i>
                            <span class="countdown" data-time="2023-12-28T15:30:00">3d 8h 45m</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Victorian Writing Desk</h5>
                        <p class="card-text">Beautiful Victorian oak writing desk from 1875 with original brass hardware.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="bid-info">
                                <span class="current-bid">$2,800</span>
                                <small class="text-muted">Current Bid</small>
                            </div>
                            <a href="@Url.Action("Items","User")" class="btn btn-primary">Bid Now</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Furniture Item 2 -->
